
<h1>Our Professionals</h1>

<a href="/site/all-professionals"><button>All sports</button></a>
<a href="/site/all-professionals?sport=crossfit"><button>Crossfit</button></a>
<a href="/site/all-professionals?sport=swimming"><button>Swimming</button></a>
<a href="/site/all-professionals?sport=running"><button>Running</button></a>

<div class="allprof">
    {{#each professionals}}

        <div class="professional-card">
            <h2>{{name}}</h2>
            <img class="professional-img {{_id}}" src="{{imageUrl}}" alt="{{name}}"/>  
            <div class="prof-details">
                <p>Email: {{email}}</p>
                <p>Specialities: {{sport}}</p>
                <p>Profession: {{profession}}</p>
                <a href="/site/professional/{{_id}}">See more</a>
            </div>
        </div>

    {{/each}}
</div>