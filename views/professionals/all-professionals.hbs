<div>
    <div class="all-profs">
        <h2>Our Professionals</h2>
        <h4>FILTER</h4>
        <div class="filter">
            <a href="/site/all-professionals"><button class="filter-btn">All Sports</button></a>
            <a href="/site/all-professionals?sport=crossfit"><button class="filter-btn">Crossfit</button></a>
            <a href="/site/all-professionals?sport=swimming"><button class="filter-btn">Swimming</button></a>
            <a href="/site/all-professionals?sport=running"><button class="filter-btn">Running</button></a>
        </div>
    </div>
    <div class="allprof">
        {{#each professionals}}

            <div class="professional-card">
                <h3>{{name}}</h3>
                <img class="professional-img {{_id}}" src="{{imageUrl}}" alt="{{name}}"/>  
                <div class="prof-details">
                    <p>Email: {{email}}</p>
                    <p>Specialities: {{sport}}</p>
                    <p>Profession: {{profession}}</p>
                    <a href="/site/professional/{{_id}}">See more</a>
                </div>
            </div>

        {{/each}}
    </div>
</div>
