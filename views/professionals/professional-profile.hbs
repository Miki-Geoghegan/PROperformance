<div class="one-professional">

</div>
<h2>{{user.name}} Profile</h2>
<img class="professional-img" src="{{user.imageUrl}}" alt="{{user.name}}" style="width: 50px;"/>

<p>Email: {{user.email}}</p>
<p>Registration: {{user.registrationNumber}}</p>
<p>Speciality: {{user.sport}}</p>

<a href="/plan/new-plan"><button>Create a new plan</button></a>

<div class="plans">
  <h1>Instructor Plans</h1>
  {{#each planData}}
  <h2>{{title}}</h2>
  <p>{{description}}</p>

  <a href="{{imageUrl}}"><img src="{{imageUrl}}" alt="plan-image"></a>
</div>







<a href="/plan/edit-plan/{{_id}}"><button type="submit">Edit plan</button></a>


<form action="/plan/delete-plan/{{_id}}" method="POST">
  <button type="submit">Delete plan</button>
</form>

{{/each}}

