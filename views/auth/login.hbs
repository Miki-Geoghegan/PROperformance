<h1>LOGIN PAGE</h1>

<form id="form" action='/auth/login' method='POST'>

  <label for=''>Email</label>
  <input type='text' name='email' required>

  <label for=''>Password</label>
  <input type='password' name='password'>

  <label for=''>Type</label>
  <select type='select' name='type'>
    <option disable selected value="">Select a Type</option>
    {{#each type}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

  {{!--<input name="action" onclick="history.back()" type="submit" value="Cancel"/>--}}

  <button type='submit'>Submit</button>
</form>

{{!-- Error message display --}}
{{#if errorMessage}}
<div class="error-message"> {{errorMessage}} </div>
{{/if}}

<br>

<a href="/"><button style="background: blue">Return to homepage</button></a>