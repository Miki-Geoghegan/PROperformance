<h1>Sign Up Professionals</h1>

<form id="form" action='/auth/professional-signup' method='POST' enctype="multipart/form-data">

  
  <label for=''>Name</label>
  <input type='text' name='name'>
  
  <label for=''>Email</label>
  <input type='text' name='email'>

  <label for=''>Password</label>
  <input type='password' name='password'>

  <label for=''>Role</label>
  <select type='select' name='role'>
    <option disable selected value="">Select a role</option>
    {{#each roles}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  
  <label for=''>Sport</label>
  <select type='select' name='sport'>
    <option disable selected value="">Select a Sport</option>
    {{#each sport}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

  <label for=''>Registration Number</label>
  <input type='number', min = '0', name='registrationNumber'>
  
  <br>
  <label>Image:</label>
  <input type="file" name="imageUrl"/>


  <button type='submit'>Submit</button>
</form>


{{#if errorMessage}}
<div class="error-message"> {{errorMessage}} </div>
{{/if}}

<br> 

<a href="/"><button style="background: blue">Return to homepage</button></a>